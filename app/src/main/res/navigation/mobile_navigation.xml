<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="io.aman.newseveryday.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/navigation_notifications"
        android:name="io.aman.newseveryday.ui.category.CategoryFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_category" >
        <action
            android:id="@+id/action_navigation_notifications_to_categoryNewsFragment"
            app:destination="@id/categoryNewsFragment" />
    </fragment>
    <fragment
        android:id="@+id/categoryNewsFragment"
        android:name="io.aman.newseveryday.ui.categoryNews.CategoryNewsFragment"
        android:label="Category News"
        tools:layout="@layout/fragment_categorynews" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="io.aman.newseveryday.ui.search.SearchFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_search" />


</navigation>